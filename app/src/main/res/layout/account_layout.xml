<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2c3e50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/profileView"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="36dp"
            app:srcCompat="@drawable/avatar" />

        <TextView

            android:id="@+id/fundsDonated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif"
            android:text=" Funds Donated:"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:layout_editor_absoluteY="305dp" />

        <TextView

            android:id="@+id/fundsRequested"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/fundsDonated"
            android:layout_marginTop="22dp"
            android:fontFamily="sans-serif"
            android:text=" Funds Requested:"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:layout_editor_absoluteY="305dp" />

        <TextView

            android:id="@+id/joined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/fundsRequested"
            android:layout_marginTop="22dp"
            android:fontFamily="sans-serif"
            android:text=" Joined Since:"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:layout_editor_absoluteY="305dp" />

        <TextView

            android:id="@+id/joinedsince"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/profileView"
            android:layout_marginTop="27dp"
            android:fontFamily="sans-serif"
            android:text=" BALANCE:"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:typeface="serif"
            tools:layout_editor_absoluteY="305dp" />

        <TextView

            android:id="@+id/numberDonations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/joined"
            android:layout_marginTop="21dp"
            android:fontFamily="sans-serif"
            android:text=" Number of Donations:"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:layout_editor_absoluteY="305dp" />

        <TextView

            android:id="@+id/numberRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/numberDonations"
            android:layout_marginTop="22dp"
            android:fontFamily="sans-serif"
            android:text=" Number of Request:"
            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:layout_editor_absoluteY="305dp" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
